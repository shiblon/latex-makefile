<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="LaTeX Makefile Downloads" />
  <Content type="html">
    <![CDATA[
    <div id="content_div" style="font-size:20pt; padding:5px;"></div>
    <script type="text/javascript">
      function manifestReceived(result) {
        var s = '';
        for (var i=0, len=result.data.length; i < len; i++) {
          var record = result.data[i];
          s += record["Summary"] + "<br>\n";
        }
        document.getElementById('content_div').innerHTML = s;
      }

      gadgets.util.registerOnLoadHandler(function () {
        var params = {};
        params[gadgets.io.RequestParameters.CONTENT_TYPE] = gadgets.io.ContentType.JSON;
        gadgets.io.makeRequest("http://latex-makefile.googlecode.com/hg/Downloads/MANIFEST.json", manifestReceived, params);
      });
    </script>
    ]]>
  </Content>
</Module>
