<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="LaTeX Makefile Downloads" />
  <Content type="html">
    <![CDATA[
    <div id="content_div" style="font-size:20pt; padding:5px;"></div>
    <script type="text/javascript">
      function manifestReceived(result) {
        console.debug(result);
        document.getElementById('content_div').innerHTML = result;
      }

      function getManifest() {
        console.debug("manifest");
        gadgets.io.makeRequest("http://latex-makefile.googlecode.com/hg/Downloads/MANIFEST.json", manifestReceived);
        console.debug("after manifest");
      }

      gadgets.util.registerOnLoadHandler(getManifest);
    </script>
    Hello, world!
    ]]>
  </Content>
</Module>
